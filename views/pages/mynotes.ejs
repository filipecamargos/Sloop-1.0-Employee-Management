<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="stylesheets/mynotes.css">
    <%- include('../includes/nav.ejs') %>
        <main>
            <div id="mynotes-container">
                <div class="animate__animated animate__fadeIn note-list-user-top">
                    <span class="glyphicon glyphicon-book"></span>
                    <% if (notesList.length == 0) { %>
                        <h2 class="my-notesmessage">Sorry
                            <%= user %>, you have no notes submitted! </h2>
                        <% } else { %>
                            <h2>Hi
                                <%= user %>, you have submitted
                                    <%= notesList.length %> notes. Check them below!
                            </h2>
                            <% } %>
                </div>
                <div class="animate__animated animate__slideInUp note-container">
                    <% notesList.forEach(note => { %>
                        <div class="note">
                            <div class="note-top-part">
                                <div class="note-top-part-left">
                                    <h3>
                                        Name:
                                        <%= note.employeeName %>
                                    </h3>
                                    <h3>
                                        Other Lead Involved:
                                        <%= note.otherLead %>
                                    </h3>
                                </div>
                                <div class="note-top-part-rigt">
                                    <h3>
                                        Date:
                                        <%= note.date %>
                                    </h3>
                                    <h3>
                                        <% if (note.type == 'Happy') { %>
                                            <span class="glyphicon glyphicon-thumbs-up"></span>
                                            <% } else if (note.type == 'Sad') { %>
                                                <span class="glyphicon glyphicon-thumbs-down"></span>
                                                <% } %>
                                    </h3>
                                </div>
                            </div>
                            <h3>
                                Note on:
                                <%= note.issue %>
                            </h3>
                            <p>
                                <%= note.description %>
                            </p>
                        </div>
                        <% }); %>

                </div>

            </diV>
        </main>
        <%- include('../includes/foot.ejs') %>
            <!--Scripts-->
            <script src="#"></script>
            <!--Scripts-->
            </body>

            </html>